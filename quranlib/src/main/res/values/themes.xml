<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MuslimProGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/onSurface2</item>
        <item name="android:windowBackground">@color/onSurface2</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/sofia_pro_regular_az</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>

        <item name="themeMainColor">@color/BlueTheme</item>
        <item name="backBtnColor">?attr/themeMainColor</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="onPrimary1">@color/onPrimary1</item>
        <item name="onPrimary2">?attr/themeMainColor</item>
        <item name="onPrimary3">@color/onPrimary3</item>

        <item name="surfaceColor1">@color/surfaceColor1</item>
        <item name="surfaceColor2">@color/surfaceColor2</item>

        <item name="onSurface1">@color/onSurface1</item>
        <item name="onSurface2">?attr/themeMainColor</item>
        <item name="onSurface3">@color/onSurface3</item>
        <item name="onSurface4">@color/onSurface4</item>
        <item name="onSurface5">@color/onSurface5</item>

        <item name="surfaceSeparatorColor">@color/surfaceSeparatorColor</item>

        <item name="navigationBarColor">@color/navigationBarSurface</item>
        <item name="onNavigationColor1">@color/navigationBar1</item>
        <item name="onNavigationColor2">?attr/themeMainColor</item>

        <item name="onSurfaceBarColor1">?attr/themeMainColor</item>
        <item name="onSurfaceBarColor2">@color/onSurfaceBar2</item>

    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sofia_pro_regular_az</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/sofia_pro_regular_az</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/onSurface2</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- White application theme. -->
    <style name="Theme.QiblaCompassWhite" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_dull</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SemiBoldTextView">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sofia_pro_semi_bold_az</item>
    </style>

    <style name="NormalTextView">
        <item name="fontFamily">@font/sofia_pro_regular_az</item>
    </style>


    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyAlertDialogStyle2" parent="Theme.AppCompat.DayNight.Dialog.Alert">


        <!-- Used for the buttons -->
        <item name="colorAccent">@color/onSurface2</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/onPrimary1</item>

        <!-- Used for the background -->
        <item name="android:background">@color/surfaceColor1</item>
        <item name="android:windowBackground">@drawable/bg_home_aya_of_moment</item>
        <item name="android:colorPrimary">@color/onPrimary1</item>
        <item name="android:colorAccent">@color/onPrimary1</item>

    </style>

    <style name="QuranTabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabTextColor">@color/onPrimary1</item>
        <item name="tabSelectedTextColor">@color/onSurface2</item>
        <item name="tabIndicatorColor">@color/onSurface2</item>
        <item name="android:background">@null</item>

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onPrimary1</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/purple_500</item>
        <item name="android:weekNumberColor">@color/purple_700</item>
    </style>

    <style name="CalenderViewCustom" parent="Widget.CalendarView.Custom">
        <item name="colorAccent">@color/onSurface2</item>
        <item name="colorPrimary">@color/onSurface2</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/onPrimary2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/onSurface5</item>
        <item name="colorSecondary">@color/onSurface2</item>
    </style>

    <style name="MyAlertDialogStyle" parent="android:Theme.Material.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/onPrimary1</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/onPrimary1</item>
        <!-- Used for the background -->
        <item name="android:background">@color/surfaceColor1</item>
        <item name="android:colorPrimary">@color/onPrimary1</item>
        <item name="android:colorAccent">@color/onPrimary1</item>
    </style>

    <style name="SeachViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sofia_pro_semi_bold_az</item>
        <item name="colorControlActivated">@color/onSurface1</item>
    </style>

    <style name="tabAllDuasTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>